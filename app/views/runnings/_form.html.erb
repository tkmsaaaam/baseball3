<p>
  <strong>Inings:</strong>
  <%= @situation.inings%>
</p>
<p>
  <strong>Bat_Count:</strong>
  <%= @situation.bat_counts%>
</p>
<%= form_with(model: running, local: true) do |form| %>
  <% if running.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(running.errors.count, "error") %> prohibited this running from being saved:</h2>

      <ul>
        <% running.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :place %>
    <%= form.select :place, collection: Running.place.options %>
    <p>Before Place(Base)</p>
  </div>


  <div class="field">
    <%= form.label :base_id %>
    <%= form.select :base_id, collection: Running.place.options %>
    <p>After Place(Base)</p>
  </div>

  <div class="field">
    <%= form.label :go_counts %>
    <%= form.number_field :go_counts %>
  </div>

  <div class="field">
    <%= form.label :reason %>
    <%= form.text_field :reason %>
  </div>

  <div class="field">
    <%= form.hidden_field :situation_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
