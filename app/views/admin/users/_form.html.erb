<%= form_with(url: admin_users_path, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :id %>
    <%= @user.id %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, value: @user.email %>
  </div>

  <div class="field">
    <%= form.label :user_type %>
    <%= form.select :user_type, options_for_select(User.user_types.keys), value: @user.user_type %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
